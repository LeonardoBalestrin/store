<%= link_to "New User", new_user_path, class:"btn-rails" %>
<div id="users">
  <table>
    <thead>
      <th>#</th>
      <th>Name</th>
      <th>E-mail</th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user.id.to_s+"/edit" do %>
            <!--  #  do  -->
              <i class="fa-solid fa-eye"></i>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td><%= user.email_address %></td>
        </tr>
      <% end %>
    </tbody>
  </table>