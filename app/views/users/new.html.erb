<h1>User registration</h1>

<%= form_with model: @user, url: users_path, local: true, class: "form" do |form| %>
  <% if @user.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@user.errors.count, "error") %> Error message:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-row">
    <div class="form-field-flex">
      <%= form.label :email_address %>
      <%= form.email_field :email_address %>
    </div>
    <div class="form-field-flex">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-field-flex">
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <div class="form-field-flex">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
    </div>
    <input type="checkbox" name="toggle-pass-mode" id="toggle-pass-mode">
  </div>

  <div class="form-field-flex">
    <%= form.label :featured_image %>
    <%= form.file_field :featured_image, accept: "image/*" %>
  </div>  

  <div>
    <%= form.label :description %>
    <%= form.rich_text_area :description %>
  </div>

  <div class="form-actions">
    <%= form.submit "Create Account", class: "btn btn-primary" %>
  </div>
<% end %>